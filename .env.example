# Career Portal Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL database connection string
# Format: mysql://username:password@host:port/database_name
DATABASE_URL=mysql://root:password@localhost:3306/augmex_career

# Database pool configuration
DB_POOL_SIZE=10
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT Secret Key - Generate a strong 256-bit secret for production
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production-immediately

# JWT Token expiration time
# Examples: '7d' (7 days), '24h' (24 hours), '60m' (60 minutes)
JWT_EXPIRES_IN=7d

# JWT Refresh token expiration time
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node environment (development, production, staging, test)
NODE_ENV=development

# Server port
PORT=3001

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# Application name (used in emails and notifications)
APP_NAME=Career Portal

# Application URL (used in email templates)
APP_URL=http://localhost:3000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file size in bytes (5MB = 5242880 bytes)
MAX_FILE_SIZE=5242880

# Upload directory path (relative to project root)
UPLOAD_DIR=public/assets

# Allowed file extensions for uploads
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx

# Resume upload directory
RESUME_UPLOAD_DIR=public/assets/resume

# Cover letter upload directory
COVER_LETTER_UPLOAD_DIR=public/assets/cover-letter

# Portfolio upload directory
PORTFOLIO_UPLOAD_DIR=public/assets/portfolio

# =============================================================================
# EMAIL CONFIGURATION (Optional - Required for OTP functionality)
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# SMTP Authentication
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email addresses
FROM_EMAIL=noreply@yourcompany.com
ADMIN_EMAIL=admin@yourcompany.com
SUPPORT_EMAIL=support@yourcompany.com

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# General rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per window

# Authentication rate limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
AUTH_RATE_LIMIT_MAX_REQUESTS=5    # 5 login attempts per window

# File upload rate limiting
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000  # 1 hour
UPLOAD_RATE_LIMIT_MAX_REQUESTS=10    # 10 uploads per hour

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable/disable security headers (Helmet)
SECURITY_HEADERS_ENABLED=true

# CORS configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session secret (for future session support)
SESSION_SECRET=your-session-secret-change-in-production

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file paths
LOG_FILE_PATH=logs/application.log
ERROR_LOG_FILE_PATH=logs/error.log

# Enable/disable request logging
REQUEST_LOGGING_ENABLED=true

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Google Analytics ID
GA_TRACKING_ID=

# Sentry DSN for error tracking
SENTRY_DSN=

# =============================================================================
# SOCIAL LOGIN (Optional - Future Feature)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# =============================================================================
# STORAGE (Optional - For cloud storage)
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Enable automatic database backups
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_FILE_UPLOAD=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_MULTIPLE_APPLICATIONS=true

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Development database (optional - overrides DATABASE_URL in development)
DEV_DATABASE_URL=mysql://root:password@localhost:3306/augmex_career_dev

# Development email (optional - overrides email settings in development)
DEV_EMAIL_ENABLED=false
DEV_EMAIL_CONSOLE_ONLY=true

# Hot reload for development
HOT_RELOAD_ENABLED=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Production database (optional - overrides DATABASE_URL in production)
PROD_DATABASE_URL=

# Production email settings
PROD_EMAIL_ENABLED=true
PROD_EMAIL_BATCH_SIZE=100

# CDN Configuration
CDN_ENABLED=false
CDN_URL=

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# Health check timeout in milliseconds
HEALTH_CHECK_TIMEOUT=5000

# Database health check query
DB_HEALTH_CHECK_QUERY=SELECT 1

# =============================================================================
# MAINTENANCE MODE
# =============================================================================

# Enable maintenance mode
MAINTENANCE_MODE=false

# Maintenance message
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.

# Allowed IPs during maintenance
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1